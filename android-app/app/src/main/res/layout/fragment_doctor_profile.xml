<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/doctor_profile_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/doctorUidTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/doctor_uid"
            android:textSize="14sp"
            android:textColor="#D81B60"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            android:background="#FFF3E0" />

        <TextView
            android:id="@+id/doctorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name :"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="start"
            android:paddingStart="10sp"
            android:textStyle="bold"

            />


        <EditText
            android:id="@+id/profileName"
            android:hint="@string/full_name_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:inputType="textPersonName"
            android:autofillHints="name"
            android:importantForAutofill="yes"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textColorHint="#333333"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/EmailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email :"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="start"
            android:paddingStart="10sp"
            android:textStyle="bold"

            />
        <EditText
            android:id="@+id/profileEmail"
            android:hint="@string/email_or_phone_hint"
            android:inputType="textEmailAddress"
            android:autofillHints="emailAddress"
            android:importantForAutofill="yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textColorHint="#333333"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/PhoneTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone :"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="start"
            android:paddingStart="10sp"
            android:textStyle="bold"

            />
        <EditText
            android:id="@+id/profilePhone"
            android:hint="@string/phone_number_hint"
            android:inputType="phone"
            android:autofillHints="phone"
            android:importantForAutofill="yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textColorHint="#333333"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/showQrBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_qr_code"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#FFC107"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/qrCodeImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:contentDescription="@string/qr_code_description"
            android:visibility="gone" />

        <Button
            android:id="@+id/updateProfile"
            android:text="@string/update_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/changePassword"
            android:text="@string/change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#03A9F4"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnLogout"
            android:text="@string/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="#BDBDBD" />

        <TextView
            android:id="@+id/aboutUs"
            android:text="@string/about_us"
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>