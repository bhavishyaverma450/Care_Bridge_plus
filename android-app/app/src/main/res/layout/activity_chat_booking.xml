<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chat_booking_title"
        android:textColor="#212121"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/bookAppointmentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="@string/book_appointment"
        android:backgroundTint="#007AFF"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/book_appointment_description" />

    <Button
        android:id="@+id/chatDoctorButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="@string/chat_doctor"
        android:backgroundTint="#007AFF"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/chat_doctor_description" />

    <Button
        android:id="@+id/chatAiButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="@string/chat_ai"
        android:backgroundTint="#007AFF"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:padding="12dp"
        android:contentDescription="@string/chat_ai_description" />
</LinearLayout>