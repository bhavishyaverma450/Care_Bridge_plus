<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".RemindersActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Bar with same positioning as home screen -->
        <LinearLayout
            android:id="@+id/cl_top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="32dp">

            <TextView
                android:id="@+id/tv_reminders_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/reminders"
                android:textColor="#333333"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_sos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:backgroundTint="#FF3B30"
                android:text="@string/sos"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Main Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Medicines Section -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_medicines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/your_medicines"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <!-- Medicines Container -->
                        <LinearLayout
                            android:id="@+id/ll_medicines_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <!-- Add Medicine Button -->
                            <Button
                                android:id="@+id/btn_add_medicine"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:backgroundTint="#2196F3"
                                android:text="@string/add_new_medicine"
                                android:textColor="#FFFFFF" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Reminders Section -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_reminders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/your_reminders"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <!-- Static Reminders -->
                        <LinearLayout
                            android:id="@+id/ll_reminders_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <!-- Add New Reminder Button -->
                            <Button
                                android:id="@+id/btn_add_reminder"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:backgroundTint="#4CAF50"
                                android:text="@string/add_new_reminder"
                                android:textColor="#FFFFFF" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

        <!-- Bottom Navigation - Now matches home screen implementation -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="12dp"
            app:itemIconSize="24dp"
            app:itemTextAppearanceActive="@style/TextAppearance.AppCompat.Small"
            app:itemTextAppearanceInactive="@style/TextAppearance.AppCompat.Small"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav_menu"
            android:contentDescription="@string/bottom_navigation_description" />

    </LinearLayout>

    <!-- Floating Action Button - Added for consistency with home screen -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_chat"
        android:contentDescription="@string/chat_fab_description"
        app:backgroundTint="#007AFF"
        app:tint="#FFFFFF"
        app:elevation="6dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
